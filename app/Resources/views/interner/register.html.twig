
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block javascripts %}
	<script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
{% endblock %}

{% block body %}

<nav class="navbar navbar-toggleable-md navbar-light ">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="#">Interner</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/register">Register <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/newEmployee">Employees</a>
      </li>
    </ul>

   {% if title == "Update Form" %}	
    <a href="{{ path('contract', {'id': employee.getId() }) }}" class=" my-button my-2 my-sm-0 btn btn-primary" type="submit">Finish contract</a>   
	{% endif %}
    <form class="form-inline my-2 my-lg-0">

      <input class="form-control mr-sm-2" type="text" placeholder="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>

    </form>
  </div>
</nav>

<div class="container container-center">

	<fieldset>

		{{ form_start(register_form) }}
	{{ form_widget(register_form, { 'attr': {'class': 'col-sm-12 my-form'} })}}
	{{ form_end(register_form) }}
		
	<legend>{{title}}</legend>

</fieldset>
</div>


{% endblock %}